---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />

		<style>
			h2 {
				color: rgb(255, 255, 255);
				font-size: 3em;
				line-height: 1.3em;
			}
		</style>
	</head>
	<body>
		<Header title={SITE_TITLE} />
		<main>
			<div class="flex mt-4">
				<div class="w-2/3" >
					<h2 class="pb-8"><b>Hi! I am Samuh,<br> a Software Engineer</b></h2>
					<p>
						I'm currently a Software Engineer working at Feedzai. 
					</p>
					
					<p class="mt-2">I hold a M.Sc. degree in Informatics and Computer Engineering from FEUP.</p>

					<p class="mt-2">
						My interests lie in the area of distributed systems, optimization and machine learning.
					</p>
				</div>
				<div class="w-1/3 mx-auto">
					<img src="https://picsum.photos/400/200" alt="Image Placeholder" >
				</div>
			</div>

			<div class="mt-32">
				<h2 class="text-center"><b>Skills</b></h1>
			</div>
		</main>
		<Footer />
	</body>
</html>
